PORT=3002
NODE_ENV=development

DB_HOST=postgres
DB_PORT=5432
DB_NAME=pages_service_db
DB_USER=postgres
DB_PASSWORD=postgres

JWT_PUBLIC_KEY_PATH=./keys/public.pem

# OpenTelemetry Configuration
# Set to 'false' to disable tracing (useful for local development without APM)
# Tracing is automatically disabled if OTEL_EXPORTER_OTLP_ENDPOINT is not set
OTEL_ENABLED=true

# OTLP HTTP endpoint (sending to collector, not directly to APM)
# Comment out or remove if you don't have an OTEL collector running
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4318
OTEL_EXPORTER_OTLP_INSECURE=true

# Service identity and resource attributes
OTEL_SERVICE_NAME=pages-service
OTEL_RESOURCE_ATTRIBUTES=deployment.environment=local,service.version=0.1.0

# Sampling configuration (always_on for development, adjust for production)
OTEL_TRACES_SAMPLER=always_on
# OTEL_TRACES_SAMPLER=parentbased_traceidratio
# OTEL_TRACES_SAMPLER_ARG=0.2

